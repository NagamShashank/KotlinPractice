<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical"
    android:background="@drawable/gradient_1">

    <TextView
        android:id="@+id/Rtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView (Horizontal)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_centerHorizontal="true"/>

    <View
        android:layout_below="@id/Rtext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/CoolGreen"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/HRecyclerView"
        android:layout_below="@+id/Rtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Gtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView (Grid)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_14ssp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/HRecyclerView"/>

    <View
        android:id="@+id/GView"
        android:layout_below="@id/Gtext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/CoolGreen"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_12sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_12sdp"
        android:id="@+id/GRecyclerView"
        android:layout_below="@+id/GView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>